# VastraVista - Environment Configuration Template
# Copy this file to .env and fill in your credentials

# Application Settings
SECRET_KEY=your-secret-key-here-change-in-production
FLASK_ENV=development
DEBUG=True

# Database (SQLite by default, can use PostgreSQL/MySQL in production)
DATABASE_URL=sqlite:///data/vastravista.db
# For PostgreSQL: postgresql://username:password@localhost/vastravista
# For MySQL: mysql://username:password@localhost/vastravista

# Amazon India Affiliate Configuration
# Sign up at: https://affiliate.amazon.in/
AMAZON_AFFILIATE_ID=your-amazon-affiliate-id
AMAZON_ACCESS_KEY=your-amazon-access-key
AMAZON_SECRET_KEY=your-amazon-secret-key

# Flipkart Affiliate Configuration
# Sign up at: https://affiliate.flipkart.com/
FLIPKART_AFFILIATE_ID=your-flipkart-affiliate-id
FLIPKART_AFFILIATE_TOKEN=your-flipkart-affiliate-token

# Cuelinks/EarnKaro for Universal Affiliate Tracking
# Sign up at: https://www.cuelinks.com/ or https://www.earnkaro.com/
CUELINKS_API_KEY=your-cuelinks-api-key

# OpenRouter + DeepSeek R1 Configuration
# FREE & UNLIMITED - Sign up at: https://openrouter.ai/
# No API key needed for basic use, optional for analytics
OPENROUTER_API_KEY=optional-for-free-tier
# Model: deepseek/deepseek-r1 (Free, unlimited, strong reasoning)

# Feature Flags (Enable/Disable features)
ENABLE_WARDROBE=True
ENABLE_AR_FEATURES=True
ENABLE_AFFILIATE_RECOMMENDATIONS=True
ENABLE_PDF_REPORTS=True
ENABLE_STYLE_QUIZ=True
ENABLE_AI_REASONING=True
ENABLE_MONK_SCALE=True

# File Upload Settings
MAX_CONTENT_LENGTH=10485760  # 10MB in bytes
ALLOWED_EXTENSIONS=jpg,jpeg,png

# Model Settings
FACE_DETECTION_CONFIDENCE=0.5
MIN_FACE_SIZE=50

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/vastravista.log

# CORS Settings (for production deployment)
CORS_ORIGINS=http://localhost:3000,http://localhost:5000

# Production Server Settings (for deployment)
# GUNICORN_WORKERS=4
# GUNICORN_THREADS=2
# GUNICORN_BIND=0.0.0.0:8000
